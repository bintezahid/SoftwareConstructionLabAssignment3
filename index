            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            <script type="text/javascript">
           
$(document).ready( function(){
               

               $("email").focus(function(){ 
                       var x= $(this).val();
                       var r='^[a-zA-Z]+\S+@+.+\S';
                       var result= x.test(r);
                       if (result==false)
                       {  $(this).after("<span class='error'> Please Enter in something@xyz.com format. </span>");}
                       });

                
               $("postal_addres").focus( function(){
                   if($(this).val().length<30){
                           $(this).after("<span class='error'> Address should be 30 digits long </span>");
                   }

               });
                checkboxes();
     



function checkboxes(){
          $("#m").click(check(this,"#f"));
          $("#f").click(check(this,"#m"));
           $("#l").click(check(this,"#a"));
          $("#a").click(check(this,"#l"));
           function check(a,b){
              if($(a).prop("checked")==true){
                 if($(b).prop("checked")==true)   {  
                      $(b).prop("checked",false)}
              }


           }
        }
        
});
        
        
        
        
        
        
        
        </script>
